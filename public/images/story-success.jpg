<svg width="1600" height="1000" viewBox="0 0 1600 1000" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Bright professional background -->
  <rect width="1600" height="1000" fill="url(#success-bg)"/>
  
  <!-- Conference room setting with large windows -->
  <rect x="100" y="100" width="500" height="700" rx="12" fill="#e0f2fe" opacity="0.3"/>
  <rect x="150" y="150" width="400" height="600" rx="8" fill="#f0f9ff" opacity="0.5"/>
  
  <!-- Presentation screen/charts -->
  <rect x="800" y="200" width="600" height="400" rx="8" fill="#1e293b" opacity="0.8"/>
  
  <!-- Growth chart -->
  <g transform="translate(850, 250)">
    <polyline 
      points="0,300 100,250 200,200 300,150 400,80 500,50" 
      fill="none" 
      stroke="#10b981" 
      stroke-width="4" 
      stroke-linecap="round"
      stroke-linejoin="round"
      opacity="0.8"
    />
    <!-- Chart bars -->
    <rect x="50" y="280" width="40" height="20" fill="#06b6d4" opacity="0.6"/>
    <rect x="150" y="250" width="40" height="50" fill="#06b6d4" opacity="0.6"/>
    <rect x="250" y="210" width="40" height="90" fill="#8b5cf6" opacity="0.6"/>
    <rect x="350" y="160" width="40" height="140" fill="#8b5cf6" opacity="0.6"/>
    <rect x="450" y="100" width="40" height="200" fill="#10b981" opacity="0.7"/>
  </g>
  
  <!-- Checkmarks / success indicators -->
  <g opacity="0.6">
    <circle cx="950" cy="700" r="30" fill="#10b981"/>
    <path d="M 935 700 L 945 710 L 965 685" fill="none" stroke="white" stroke-width="4" stroke-linecap="round"/>
    
    <circle cx="1050" cy="700" r="30" fill="#10b981"/>
    <path d="M 1035 700 L 1045 710 L 1065 685" fill="none" stroke="white" stroke-width="4" stroke-linecap="round"/>
    
    <circle cx="1150" cy="700" r="30" fill="#10b981"/>
    <path d="M 1135 700 L 1145 710 L 1165 685" fill="none" stroke="white" stroke-width="4" stroke-linecap="round"/>
  </g>
  
  <!-- Documents/pitch deck -->
  <g transform="translate(200, 650)" opacity="0.7">
    <rect x="0" y="0" width="150" height="200" rx="4" fill="#ffffff" stroke="#cbd5e1" stroke-width="2"/>
    <rect x="15" y="20" width="120" height="8" rx="2" fill="#06b6d4"/>
    <rect x="15" y="40" width="100" height="4" rx="1" fill="#94a3b8"/>
    <rect x="15" y="50" width="110" height="4" rx="1" fill="#94a3b8"/>
    <rect x="15" y="60" width="90" height="4" rx="1" fill="#94a3b8"/>
  </g>
  
  <!-- Trophy/achievement -->
  <g transform="translate(1350, 150)" opacity="0.5">
    <ellipse cx="0" cy="80" rx="40" ry="10" fill="#fbbf24"/>
    <rect x="-30" y="50" width="60" height="30" fill="#fbbf24"/>
    <path d="M -40 50 L -40 20 L -20 10 L 20 10 L 40 20 L 40 50" fill="#fcd34d"/>
    <circle cx="0" cy="30" r="15" fill="#fef3c7"/>
    <text x="-8" y="38" font-family="Arial" font-size="20" fill="#92400e" font-weight="bold">1</text>
  </g>
  
  <!-- Money/funding symbols -->
  <g transform="translate(600, 250)" opacity="0.4">
    <circle cx="0" cy="0" r="35" fill="#10b981"/>
    <text x="-12" y="12" font-family="Arial" font-size="40" fill="white" font-weight="bold">$</text>
  </g>
  
  <!-- Handshake representation -->
  <g transform="translate(300, 400)" opacity="0.3">
    <rect x="0" y="0" width="80" height="100" rx="40" fill="#8b5cf6"/>
    <rect x="60" y="0" width="80" height="100" rx="40" fill="#06b6d4"/>
  </g>
  
  <!-- Rising arrow -->
  <g transform="translate(1250, 400)" opacity="0.6">
    <line x1="0" y1="100" x2="0" y2="0" stroke="#10b981" stroke-width="6" stroke-linecap="round"/>
    <polyline points="-20,30 0,0 20,30" fill="none" stroke="#10b981" stroke-width="6" stroke-linecap="round" stroke-linejoin="round"/>
  </g>
  
  <!-- Confetti -->
  <rect x="450" y="150" width="8" height="20" fill="#f43f5e" opacity="0.6" transform="rotate(25 454 160)"/>
  <rect x="1100" y="100" width="8" height="20" fill="#06b6d4" opacity="0.6" transform="rotate(-35 1104 110)"/>
  <rect x="700" y="180" width="8" height="20" fill="#8b5cf6" opacity="0.6" transform="rotate(15 704 190)"/>
  <circle cx="900" cy="120" r="6" fill="#fbbf24" opacity="0.7"/>
  <circle cx="1300" cy="550" r="6" fill="#10b981" opacity="0.7"/>
  
  <defs>
    <linearGradient id="success-bg" x1="0" y1="0" x2="1600" y2="1000">
      <stop offset="0%" stop-color="#f0f9ff"/>
      <stop offset="50%" stop-color="#e0f2fe"/>
      <stop offset="100%" stop-color="#dbeafe"/>
    </linearGradient>
  </defs>
</svg>
